<tr <%if activity.id % 2 == 0%>class="odd_row"<%end%>>
	<td><%= activity.id %></td>
	<td><%= activity.name %></td>
	<td><%= activity.calories_burned_per_pound_per_minute %></td>
	<td><%= link_to image_tag('/images/icons/page_white.png'), admin_activity_path(activity) %></td>
	<td><%= link_to image_tag('/images/icons/pencil.png'), edit_admin_activity_path(activity) %></td>
	<td><%= link_to image_tag('/images/icons/delete.png'), admin_activity_path(activity),  :confirm => "Are you sure?", :method => :delete %></td>
</tr>