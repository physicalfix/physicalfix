	<thead>
		<tr>
			<th width="16"></th>
			<th width="20">ID</th>
			<th>Week</th>
			<th>User</th>
			<th>Viewed</th>
			<th>Completed</th>
			<th width="16"></th>
			<th width="16"></th>
			<th width="16"></th>
		</tr>
	</thead>
	<tbody>
		<%= render :partial => 'workout', :collection => @workouts %>
